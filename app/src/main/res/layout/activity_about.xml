<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nicholas.fastmedicine.AboutActivity"
    android:gravity="center_horizontal">

    <include layout="@layout/toorbar_layout"></include>

    <ImageView
        android:layout_marginTop="@dimen/content_marginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Android V1.0.0" />

    <ImageView
        android:layout_marginTop="@dimen/content_marginTop"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:src="@drawable/qrcode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描二维码，您的朋友也可以下载芒果快药客户端" />

    <TextView
        android:layout_marginTop="@dimen/content_marginTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版权所有"/>
</LinearLayout>
