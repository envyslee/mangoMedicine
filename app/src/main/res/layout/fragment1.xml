<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/beautyGreen">
        <TextView
            android:id="@+id/locateCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="12dip"
            android:textColor="@android:color/white"
            android:text="城市"/>
        <ImageView
            android:id="@+id/searchBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/search_frame"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="6dip"
            android:layout_marginBottom="6dip"/>
        <ImageView
            android:id="@+id/servicePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/telephone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dip"/>
    </LinearLayout>


    <FrameLayout android:id="@+id/framelayout"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:background="#ffffff">
        <org.taptwo.android.widget.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        </org.taptwo.android.widget.ViewFlow>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            >
            <!--android:background="#88252525"--><!--写在上面设置点后面的横条背景色-->
            <org.taptwo.android.widget.CircleFlowIndicator
                android:padding="2dip"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/viewflowindic"
                android:layout_gravity="center_horizontal|bottom"
                app:radius="4dip"
                app:circleSeparation = "20dip"
                app:inactiveType="fill"
                app:activeType="fill"
                app:activeColor="@color/beautyGreen"
                app:inactiveColor="@android:color/white"
                />
        </LinearLayout>
    </FrameLayout>

    <!--<ViewFlipper
        android:id="@+id/myflipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ViewFlipper>-->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:stretchColumns="0,1,2,3"
        android:paddingTop="12dip"
        android:paddingBottom="12dip">
        <TableRow>
            <LinearLayout
                android:id="@+id/price_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日特价"
                    android:paddingTop="4dip"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shake_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摇一摇"
                    android:paddingTop="4dip"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科普文章"
                    android:paddingTop="4dip"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/community_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社区"
                    android:paddingTop="4dip"/>
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_marginTop="12dip">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康测评"
                    android:paddingTop="4dip"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常见病症"
                    android:paddingTop="4dip"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="疫苗"
                    android:paddingTop="4dip"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cat_40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服药提醒"
                    android:paddingTop="4dip"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>