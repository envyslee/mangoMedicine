                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"/>-->
        <ImageView
            android:id="@+id/searchBanner"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/actionbar_search_icon"
            android:layout_marginRight="48dip"
            android:layout_marginTop="@dimen/text_padding6"
            android:layout_marginBottom="@dimen/text_padding6"/>

        <ImageView
            android:id="@+id/servicePhone"
            android:layout_width="48dip"
            android:layout_height="46dip"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/telephone"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:background="#ffffff">

        <org.taptwo.android.widget.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></org.taptwo.android.widget.ViewFlow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="3dip">
            <!--android:background="#88252525"--><!--写在上面设置点后面的横条背景色-->
            <org.taptwo.android.widget.CircleFlowIndicator
                android:id="@+id/viewflowindic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:padding="2dip"
                app:activeColor="@color/beautyGreen"
                app:activeType="fill"
                app:circleSeparation="20dip"
                app:inactiveColor="@android:color/white"
                app:inactiveType="fill"
                app:radius="4dip" />
        </LinearLayout>
    </FrameLayout>

    <!--<ViewFlipper
