<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nicholas.fastmedicine.MoreActivity"
    android:background="@color/pageBackground">

    <include layout="@layout/toorbar_layout"></include>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:layout_marginTop="@dimen/content_marginTop"
        android:background="@color/white"
        android:paddingLeft="@dimen/text_padding12"
        android:paddingRight="@dimen/text_padding12">
        <ImageView android:src="@drawable/icon_geo"/>
        <ImageView android:src="@drawable/icon_geo" android:layout_row="2" android:layout_column="0"/>
        <TextView android:text="检查更新" android:layout_width="fill_parent" android:layout_row="0" android:layout_column="1" android:textSize="@dimen/textSize" android:paddingTop="@dimen/text_padding12" android:paddingBottom="@dimen/text_padding12" android:paddingLeft="@dimen/text_padding6"/>
        <View android:layout_height="@dimen/view_line_height" android:background="@color/pageBackground" android:layout_row="1" android:layout_column="0" android:layout_columnSpan="2"/>
        <TextView android:id="@+id/about" android:text="关于我们" android:layout_width="fill_parent" android:layout_row="2" android:layout_column="1"  android:textSize="@dimen/textSize"  android:paddingTop="@dimen/text_padding12" android:paddingBottom="@dimen/text_padding12" android:paddingLeft="@dimen/text_padding6"/>
    </GridLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="退出当前账号"
        android:background="@color/beautyGreen"
        android:layout_marginTop="@dimen/content_marginTop"
        android:textSize="@dimen/textSize18"/>
</LinearLayout>
