<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nicholas.fastmedicine.ProvinceActivity"
    android:background="@color/pageBackground">

    <include layout="@layout/toorbar_layout"></include>

<!--    <ListView
        android:id="@+id/list_province"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></ListView>-->
<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:rowCount="9"
    android:columnCount="2"
    android:background="@color/white"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    android:layout_marginTop="16dip">
    <View android:layout_height="0.8dip" android:layout_columnSpan="2" android:layout_row="1" android:background="@color/pageBackground"/>
    <View android:layout_height="0.8dip" android:layout_columnSpan="2" android:layout_row="3" android:background="@color/pageBackground"/>
    <View android:layout_height="0.8dip" android:layout_columnSpan="2" android:layout_row="5" android:background="@color/pageBackground"/>
    <View android:layout_height="0.8dip" android:layout_columnSpan="2" android:layout_row="7" android:background="@color/pageBackground"/>
    <TextView android:text="城市" android:layout_column="0" android:layout_row="0" android:textSize="17sp" android:textColor="@color/smssdk_black"/>
    <TextView android:text="收货人" android:layout_column="0" android:layout_row="2" android:textSize="17sp" android:textColor="@color/smssdk_black"/>
    <TextView android:text="手机号码" android:layout_column="0" android:layout_row="4" android:textSize="17sp" android:textColor="@color/smssdk_black"/>
    <TextView android:text="地址" android:layout_column="0"  android:layout_row="6" android:textSize="17sp" android:textColor="@color/smssdk_black"/>
    <TextView android:text="门牌号" android:layout_column="0"  android:layout_row="8" android:textSize="17sp" android:textColor="@color/smssdk_black"/>
    <TextView android:id="@+id/city_et" android:layout_width="fill_parent" android:layout_row="0" android:layout_column="1" android:textSize="17sp" style="?android:attr/textViewStyle" android:background="@null"  android:paddingBottom="12dip" android:paddingTop="12dip" android:paddingLeft="6dip" android:textColor="@color/smssdk_black"/>
    <EditText android:layout_width="fill_parent" android:layout_row="2" android:layout_column="1" android:textSize="17sp"  style="?android:attr/textViewStyle" android:background="@null" android:paddingBottom="12dip" android:paddingTop="12dip" android:paddingLeft="6dip" android:hint="请输入收货人姓名" android:textColorHint="@color/subTitleBg" android:textColor="@color/smssdk_black"/>
    <EditText android:id="@+id/phone_et" android:inputType="number" android:maxLength="11" android:layout_width="fill_parent" android:layout_row="4" android:layout_column="1" android:textSize="17sp"  style="?android:attr/textViewStyle" android:background="@null" android:paddingBottom="12dip" android:paddingTop="12dip" android:paddingLeft="6dip" android:hint="请输入收货人的联系电话" android:textColorHint="@color/subTitleBg" android:textColor="@color/smssdk_black"/>
    <TextView android:id="@+id/address_et" android:layout_width="fill_parent" android:layout_row="6" android:layout_column="1" android:textSize="17sp"  style="?android:attr/textViewStyle" android:background="@null" android:paddingBottom="12dip" android:paddingTop="12dip" android:paddingLeft="6dip" android:layout_marginRight="64dip"  android:hint="请选择住宅小区、大厦或学校" android:textColorHint="@color/subTitleBg" android:textColor="@color/smssdk_black"/>
    <EditText android:layout_width="fill_parent" android:layout_row="8" android:layout_column="1" android:textSize="17sp"  style="?android:attr/textViewStyle" android:background="@null" android:paddingBottom="12dip" android:paddingTop="12dip" android:paddingLeft="6dip" android:layout_marginRight="64dip" android:hint="请输入楼号门牌号等详细地址信息" android:textColorHint="@color/subTitleBg" android:textColor="@color/smssdk_black"/>
</GridLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:text="完成"
        android:layout_marginTop="16dp"
        android:background="@color/beautyGreen"
        android:textSize="18sp"/>
</LinearLayout>
