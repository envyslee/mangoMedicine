<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dip"
    android:layout_marginTop="2dip"
    android:layout_marginLeft="1dip"
    android:layout_marginRight="1dip"
    android:background="@drawable/recyler_selector"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/search_list_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/search_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/beautyTextColor"
            android:textSize="@dimen/textSize16"
            android:padding="@dimen/text_padding4"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding4">

            <TextView
                android:id="@+id/search_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/textSize14"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/search_list_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize14"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
