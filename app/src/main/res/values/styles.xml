<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="tabView">@style/MyTabView</item><!--新建一个主题-->
        <item name="colorPrimary">@color/beautyGreen</item>
        <item name="colorPrimaryDark">@color/beautyGreen</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="StartAppTheme" parent="AppTheme">
        <item name="android:background">@drawable/layout_list_start_pic</item>
    </style>

    <style name="MyTabView" parent="TabView">
        <item name="iconWidth">28dp</item>
        <item name="iconHeight">28dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
